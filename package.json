{
  "name": "djot-ls",
  "devDependencies": {
    "@types/node": "20.8.2",
    "gts": "^5.2.0",
    "typescript": "~5.2.0"
  },
  "main": "src/server.ts",
  "bin": {
    "djot-ls": "./djot-ls"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "cd ./vendor/djot.js && npm run build && cd ../.. && tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "update-readme": "npx djot ./README.dj -t pandoc | pandoc -f json -t gfm > README.md"
  },
  "dependencies": {
    "@djot/djot": "file:vendor/djot.js",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
